{
    "hooks": {
        "SessionStart": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": "npx -y bun ${CLAUDE_PLUGIN_ROOT}/scripts/smart-install.ts ${CLAUDE_PLUGIN_ROOT}"
                    },
                    {
                        "type": "command",
                        "command": "npx -y bun ${CLAUDE_PLUGIN_ROOT}/src/hooks/session-start.ts"
                    }
                ]
            }
        ],
        "Stop": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": "npx -y bun ${CLAUDE_PLUGIN_ROOT}/src/hooks/stop.ts"
                    },
                    {
                        "type": "command",
                        "command": "npx -y bun ${CLAUDE_PLUGIN_ROOT}/src/hooks/sync.ts",
                        "async": true,
                        "timeout": 15
                    }
                ]
            }
        ]
    }
}
