#!/bin/sh

# Automatically unstage dist/ files â€” those should only be committed by CI
DIST_FILES=$(git diff --cached --name-only | grep '^plugins/.*/dist/' || true)
if [ -n "$DIST_FILES" ]; then
  echo "$DIST_FILES" | xargs git reset HEAD --
  echo "Unstaged dist/ files (committed by CI only):"
  echo "$DIST_FILES"
  echo "To discard these changes, run: git restore plugins/*/dist/"
fi
